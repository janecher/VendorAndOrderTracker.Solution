@{
  Layout = "_Layout";
}
@using VendorAndOrderTracker.Models;
<div class="container">
  <h1>Vendor list</h1>
  @if (@Model.Count == 0)
  {
    <h3>No vendors yet</h3>
  }
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    <p><a href='/vendors/@vendor.Id/edit'>Update</a></p>
    <form action="/vendors/@vendor.Id" method="post">
      <button type="submit" name="button" class="btn">Delete</button>
    </form>
  }
  <p><a href='/'>Home</a></p>
  <p><a href='/vendors/new'>Add new vendor</a></p>
  <form action="/vendors/delete" method="post">
    <button type="submit" name="button" class="btn">Delete all vendors</button>
  </form>
</div>